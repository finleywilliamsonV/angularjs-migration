{
    "root": true,
    "env": {
        "browser": true,
        "amd": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            2,
            "single"
        ],
        "@typescript-eslint/no-inferrable-types": 0
    }
}